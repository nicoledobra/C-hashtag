using System;
using System.Threading;

class Program
{
    static void Main()
    {
        int horas = 0;
        int minutos = 0;
        int segundos = 0;

        Console.CursorVisible = false;
        Console.SetCursorPosition(15, 2);

        while (horas < 24)
        {
            while (minutos < 60)
            {
                while (segundos < 60)
                {
                    Console.Write("{0:D2}:{1:D2}:{2:D2}", horas, minutos, segundos);
                    Thread.Sleep(1000); // Pausa de 1 segundo

                    Console.SetCursorPosition(15, 2);
                    segundos++;
                }

                segundos = 0;
                minutos++;
            }

            minutos = 0;
            horas++;
        }
    }
}

